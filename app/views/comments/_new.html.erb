<%= form_with model: comment, url: post_comments_path(post_id: post, id: comment), method: "post", local: false do |form| %>
	<div>
		<p class="comment-label"><%= form.label "Добавить комментарий" %></p>
		<p><%= form.text_area :text %></p>
	</div>
	<div class="comment-button">
		<p><%= form.submit "Отправить" %></p>
	</div>
<% end %>