- dialog = message.dialog
.message{:id => "message-#{message.id}"}
  %div
    = link_to message.user.username, user_path(message.user), class: "link-user"
    = message.body 
    = link_to dialog_message_path(dialog_id: dialog, id: message.id), method: :delete, remote: true do 
      .remove-message.fa.fa-trash
