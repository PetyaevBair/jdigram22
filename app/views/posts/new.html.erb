<%= form_with model: @post do |form| %>
	<div>
		<p><%= form.label :description, "Содержимое:" %></p>
		<p><%= form.text_field :description %></p>
	</div>
	
	<div>
		<p><%= form.label :image, "Фото:" %></p>
		<p><%= form.file_field :image %></p>
	</div>

	<div>
		<p><%= form.submit "Создать пост" %></p>
	</div>

<% end %>