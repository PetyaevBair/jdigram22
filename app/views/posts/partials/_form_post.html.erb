<div class="post-create">
	<%= form_with model: @post do |form| %>
		<div class="form-group">
			<%= form.text_field :description %>
		</div>
		
		<div class="form-group">
			<%= form.file_field :image, onchange: "readURL(event.target)" %>
		</div>
		<div>
			<img id="preview" src="">
		</div>
		<br>
		<div class="text-center">
			<%= form.submit "Нажать", class: 'btn btn-primary' %>
		</div>
	<% end %>
</div>