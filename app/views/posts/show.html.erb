<div class="user-profile">
  <div class="row">
    <div class="col-8">
      <div>
        <% if @post.image.blank? %>
          <p> Фото нет </p>
        <% else %>
          <%= image_tag @post.image%>
        <% end %>
        <% if user_signed_in? %>
          <%= render "comments/new", losals: {post: @post} %>
        <% end %>
      </div>
    </div>
    
    <div class="col-4">
      <%= @post.description %>
      <%= render partial: '/posts/partials/comment_grid', locals: { post: @post } %>
    </div>

  </div>
</div>